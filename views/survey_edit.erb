<h1>Edit the name of your survey, OR add questions to your survey.</h1>

<h1>Update <%=@survey.name() %> </h1>

<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">New name of your survey:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<h1>Add questions to your survey</h1>
<h2> <%=@question.id() %></h2>

<form action="/surveys/<%= @question.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="question">Question:</label>
  <input id="question" name="question" type="text">
    <button type="submit">Add questions</button>
</form>
